{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sensor",
  "description": "generated sensor data including anomalies",
  "type": "object",
  "properties": {
    "id": {
      "description": "Sensor id",
      "type": "string"
    },
    "lat": {
      "description": "latitude",
      "type": "number"
    },
    "lng": {
      "description": "Longitude",
      "type": "number"
    },
    "unit": {
      "description": "Unit of measurement",
      "type": "string"
    },
    "type": {
      "description": "Unit type",
      "type": "string"
    },
    "desc": {
      "description": "Description of the sensor",
      "type": "string"
    },
    "value": {
      "description": "generated sensor value",
      "type": "number"
    }
  },
  "required": [ "id" ]
}